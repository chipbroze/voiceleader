      <a class="staff" id="soprano" tabindex="0"></a>
      <a class="staff" id="alto" tabindex="0"></a>
      <a class="staff" id="tenor" tabindex="0"></a>
      <a class="staff" id="bass" tabindex="0"></a>
    </div>
    <br>
    <div class="float">
      <input id="migrate" type="button" value="Fill Pitches" onClick="fillPitches();">
    </div>
    <div class="float" id="voice_input">
      <label for="s_input">Soprano:</label><input id="s_input" type:"text" size="23" name="soprano" value=""><br>
      <label for="a_input">Alto:</label><input id="a_input" type:"text" size="23" name="alto" value=""><br>
      <label for="t_input">Tenor:</label><input id="t_input" type:"text" size="23" name="tenor" value=""><br>
      <label for="b_input">Bass:</label><input id="b_input" type:"text" size="23" name="bass" value="">
    </div>
  </fieldset>
  <fieldset>
    <legend>Voice Leading Errors</legend>
    <div class="float">
      <label><input type="checkbox" name ="options[]" value="p_fifths" checked>Parallel Fifths</label><br>
      <label><input type="checkbox" name ="options[]" value="p_octaves" checked>Parallel Octaves</label><br>
      <label><input type="checkbox" name ="options[]" value="intervals" checked>Illegal intervals</label>
    </div>
    <div class="float"> 
      <label><input type="checkbox" name ="options[]" value="sevenths" checked>Sevenths resolve down</label><br>
      <label><input type="checkbox" name ="options[]" value="spacing" checked>Spacing between notes</label><br>
      <label><input type="checkbox" name ="options[]" value="range" checked>Voice ranges</label>
    </div>
  </fieldset>
  <fieldset>
    <legend>Submit</legend>
    <input type="submit" value="Submit">
  </fieldset>
</form>

